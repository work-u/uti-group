class RecruitTestCase extends DrupalWebTestCase {

  protected $std_user;

  public static function getInfo() {
    return array(
      'name' => 'Create/edit/delete job ads',
      'description' => 'Tests the creation of job ads.',
      'group' => 'Recruit',
    );
  }

  function setUp() {
    parent::setUp('recruit');
    $this->std_user = $this->drupalCreateUser(array('create recruit_job content', 'edit own recruit_job content', 'delete own recruit_job content'));
  }

  public function testRecruitCreateJob() {
    $this->drupalLogin($this->std_user);

    $edit = array(
      'title' => $this->randomName(32),
      'body[und][0][value]' => $this->randomName(64),
    );
    $this->drupalPost('node/add/recruit-job', $edit, t('Save'));
    $this->assertText(t('Job @title has been created.', array('@title' => $edit['title'])));
  }

